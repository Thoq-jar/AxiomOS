<script lang="js">
    document.addEventListener("DOMContentLoaded", function() {
        function search(event) {
            // Prevent the form from submitting without a query
            event.preventDefault();

            // Get the search bar element
            const searchBar = document.getElementById("searchBar");

            // Declare the field 'value'
            searchBar.value = searchBar.value.trim();

            // Search StartPage
            const query = searchBar.value;
            window.open(`https://startpage.com/search?q=${query}`, '_blank');

            // Clear the search bar
            searchBar.value = "";
        }

        // Wait for the 'Enter' key to be pressed
        document.getElementById("searchBar").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                // Search with StartPage
                search(event);
            }
        });
    });
</script>

<div data-widget="search" >
    <div class="rounded-lg w-fit h-fit px-3 py-3 backdrop-blur-lg 
             shadow-black shadow-2xl font-sans font-extralight">
        <label for="search" class="text-2xl">
            <span class="text-white">âŒ•</span>
            <input type="text"
                   id="searchBar" 
                   class="w-[50vw] text-2xl border-none outline-none 
                          focus:outline-none focus:border-none focus:ring-0 bg-transparent"
                   autocomplete="off"
                   autocapitalize="off"
                   spellcheck="false"
                   placeholder="Search for anything..." />
        </label>
    </div>
</div>
